#!/usr/bin/env node

var child_process = require("child_process");
var path = require("path");

var args = process.argv.slice(2);
var filepath = path.resolve(args.shift());

var preArgs = ["--harmony", "--harmony-tailcalls", "--use-strict"];

args = args.filter(val => {
	if (["--trace-deopt", "--trace-opt", "--trace-inlining"].indexOf(val) > -1) {
		preArgs.push(val);
		return false;
	}
	
	return true;
});

child_process.spawn("node", [...preArgs, `${__dirname}/_simplebench.js`, filepath, ...args], { stdio : "inherit" });